{% extends 'layouts/base.njk' %}

{% set metaTitle = 'David Chen' %}
{% set metaDescription = 'Ramblings by David Chen' %}

{% block content %}

  <h1>Writings</h1>
  <ul class="posts">
    {% for post in collections.posts %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <span class="post-date">{{ post.date | moment('MMMM D, YYYY') }}</span>
        {% if post.data.draft %}
          <span class="post-draft-label">Draft</span>
        {% endif %}
      </li>
    {% endfor %}
  </ul>

{% endblock %}