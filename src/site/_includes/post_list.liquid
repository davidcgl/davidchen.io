{% assign filtered_posts = posts | filter_by_year: year %}

<h1>{{ year }}</h1>
<ul class="post-list">
  {% for post in filtered_posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span class="post-date">{{ post.date | date: "%B %e, %Y" }}</span>
    </li>
  {% endfor %}
</ul>