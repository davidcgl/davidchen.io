<ul class="posts">
  {% for post in posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span class="post-date">{{ post.date | date: "%B %e, %Y" }}</span>
      {%- if post.data.draft -%}
        <span class="post-draft-label">Draft</span>
      {%- endif -%}
    </li>
  {% endfor %}
</ul>