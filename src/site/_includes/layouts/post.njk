{% extends 'layouts/base.njk' %}

{% set metaTitle = (title or site.title) ~ ' â€” David Chen' %}
{% set metaDescription = (subtitle or site.description) | trim | replace('\n', '') %}
{% set metaImage = image or (site.url ~ site.logo) %}

{% set structuredData %}
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BlogPosting",
    "url": "{{ site.url ~ page.url }}",
    "headline": "{{ title }}",
    "description": "{{ metaDescription }}",
    "image": "{{ metaImage }}",
    "inLanguage": "en-US",
    "datePublished": "{{ page.date | moment }}",
    "dateModified": "{{ (modified or page.date) | moment }}",
    "author": {
      "@type": "Person",
      "name": "{{ site.author.name }}",
      "url": "{{ site.url }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ site.title }}",
      "url": "{{ site.url }}",
      "logo": {
        "@type": "ImageObject",
        "width": 400,
        "height": 400,
        "url": "{{ site.url ~ site.logo }}"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url ~ page.url }}"
    }
  }
</script>
{% endset %}

{% block main %}
  <article class="post">
    <h1 class="title">{{ title }}</h1>
    <time class="post__date" datetime="{{ page.date | moment('YYYY-MM-DD') }}">
      {{ page.date | moment('MMMM D, YYYY') }}
    </time>
    {{ content | safe }}
  </article>
{% endblock %}
